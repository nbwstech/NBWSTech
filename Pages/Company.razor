@page "/company"

<PageTitle>Company</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Company</MudText>

<div class="container mt-5">

    <div class="mt-5">
   <MudText Typo="Typo.h5">Executive Team</MudText>
<MudList>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.BusinessCenter">CEO - Provides strategic direction, final decision-maker, represents the company externally.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Business">COO - Manages day-to-day operations and ensures smooth functioning of all departments.</MudListItem>
</MudList>
<MudText Typo="Typo.h5">Production Department</MudText>
<MudList>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.MovieFilter">Production Manager - Oversees content creation projects and allocates resources and timelines.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Videocam">Content Creators/Videographers - Captures and produces visual content.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Mic">Sound Engineers/Audio Technicians - Handle audio recordings, mixing, and mastering.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.VideoLibrary">Post-production Editors - Edit, finalize, and prepare content for distribution.</MudListItem>
</MudList>
<MudText Typo="Typo.h5">Collaboration & Partnerships Department</MudText>
<MudList>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.GroupWork">Collaboration Manager - Coordinates joint activities and scouts for new opportunities.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Event">Event Organizer - Plans and oversees any joint events or workshops.</MudListItem>
</MudList>

<MudText Typo="Typo.h5">Marketing & Promotion Department</MudText>
<MudList>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Campaign">Marketing Manager - Creates and implements strategies, monitors campaign results.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.ThumbUp">Social Media Coordinator (nbwsmcc) - Manages social media platforms, crafts posts and stories.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Search">Digital Marketer - Focuses on online advertisements, SEO, and web traffic.</MudListItem>
</MudList>

<MudText Typo="Typo.h5">Client Relations & Bookings Department</MudText>
<MudList>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Support">Client Relations Manager - Ensures optimal client experience, handles feedback.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Schedule">Booking Coordinator - Manages scheduling and confirms appointments.</MudListItem>
</MudList>

<MudText Typo="Typo.h5">Finance & Admin Department</MudText>
<MudList>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Money">Finance Manager - Oversees budgets, handles financial reporting.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.AdminPanelSettings">Admin Assistant - Supports all departments, maintains office supplies.</MudListItem>
</MudList>

<MudText Typo="Typo.h5">Training & Development Department</MudText>
<MudList>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.School">Training Manager - Develops training modules, organizes external training.</MudListItem>
</MudList>

<MudText Typo="Typo.h5">Maintenance & Equipment Department</MudText>
<MudList>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Build">Equipment Manager - Ensures all equipment is functional, manages inventory.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Build">Maintenance Technician - Handles the repair and routine check-up of equipment.</MudListItem>
</MudList>

<MudText Typo="Typo.h5">Systems & Technology Department</MudText>
<MudList>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Computer">IT Specialist - Manages the website, ensures cybersecurity and data protection.</MudListItem>
    <MudListItem IconColor="Color.Primary" Icon="@Icons.Material.Filled.Storage">CRM Coordinator - Manages CRM, segments customer data.</MudListItem>
</MudList>

    </div>
</div>
